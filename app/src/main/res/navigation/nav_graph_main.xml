<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.androidcourseex8.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_page1Fragment"
            app:destination="@id/page1Fragment" />
        <action
            android:id="@+id/action_mainFragment_to_page2Fragment"
            app:destination="@id/page2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/page1Fragment"
        android:name="com.example.androidcourseex8.Page1Fragment"
        android:label="fragment_page1"
        tools:layout="@layout/fragment_page1" />
    <fragment
        android:id="@+id/page2Fragment"
        android:name="com.example.androidcourseex8.Page2Fragment"
        android:label="fragment_page2"
        tools:layout="@layout/fragment_page2" />
</navigation>